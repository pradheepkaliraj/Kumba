<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="15dp">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upd_txt_name"
        android:layout_marginTop="10dp"
        android:textColor="#000"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upd_txt_description"
        android:layout_marginTop="10dp"
        android:textColor="#000"/>
    <ListView
        android:id="@+id/upd_ingredients_list"
        android:background="@android:color/transparent"
        android:autofillHints="@string/hint_enter_Ingredients"
        android:inputType="textCapSentences|textMultiLine"
        android:textColorHint="@color/hint_enter_Ingredients"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        />
    <ListView
        android:id="@+id/upd_steps_list"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:autofillHints="@string/hint_enter_steps"
        android:inputType="textCapSentences|textMultiLine"
        android:textColorHint="@color/hint_enter_steps"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_upd_save"
        android:layout_marginTop="15dp"
        android:text="Save"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_upd_cancel"
        android:layout_marginTop="15dp"
        android:text="Cancel"/>
</LinearLayout>
</ScrollView>
